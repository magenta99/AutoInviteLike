{
  "manifest_version": 3,
  "name": "Facebook Auto Invite",
  "version": "2.0",
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}